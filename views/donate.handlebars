

  <!-- Main content -->
  <section class="section">
    <div class="container">
      <h1 class="title">{{mainTitle}}</h1>
      <p class="subtitle">{{subtitle}}</p>
    </div>
  </section>

  <!-- Blog content -->
  <div class="content">
    <h2>{{blogTitle}}</h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p>{{content}}</p>
  </div>

  {{#if comments.length}}
    <div class="mt-4">
      <h3>Comments:</h3>
      {{#each comments}}
        <article class="message">
          <div class="message-body">
            <strong>{{this.user.name}}</strong> ({{format_date this.date_created}}):
            <br>
            {{this.content}}
          </div>
        </article>
      {{/each}}
    </div>
  {{/if}}






