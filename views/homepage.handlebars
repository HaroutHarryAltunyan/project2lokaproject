    <div class="mt-4">
      <h3>Comments:</h3>
      {{#each comments}}
        <article class="message">
          <div class="message-body">
            <strong>{{this.user.name}}</strong> ({{format_date this.date_created}}):
            <br>
            {{this.content}}
          </div>
        </article>
      {{/each}}
    </div>
  {{/if}}









