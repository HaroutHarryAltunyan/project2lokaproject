


  <!-- Main content -->
  <section class="section">
    <div class="container">
      <h1 class="title">{{mainTitle}}</h1>
      <p class="subtitle">{{subtitle}}</p>
    </div>
  </section>

  <!-- Blog content -->
  <div class="content">
    <h2>{{blogTitle}}</h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p>{{content}}</p>
  </div>

