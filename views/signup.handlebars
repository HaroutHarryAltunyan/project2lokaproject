<div class="columns">

  <div class="column is-half">
    <h2 class="title">Signup</h2>
    <form class="signup-form" action="{{signupAction}}" method="post">
      <div class="field">
        <label class="label" for="name-signup">Name:</label>
        <div class="control">
          <input class="input" type="text" id="name-signup" name="name" placeholder="Enter your name" required />
        </div>
      </div>

      <div class="field">
        <label class="label" for="email-signup">Email:</label>
        <div class="control">
          <input class="input" type="email" id="email-signup" name="email" placeholder="Enter your email" required />
        </div>
      </div>

      <div class="field">
        <label class="label" for="password-signup">Password:</label>
        <div class="control">
          <input class="input" type="password" id="password-signup" name="password" placeholder="Enter your password" required />
        </div>
      </div>

      <div class="field mt-3">
        <button class="button is-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>